[Unit]
Description=Matrix Postgres server
After=docker.service
Requires=docker.service

[Service]
Type=simple
ExecStartPre=/bin/sleep 5
ExecStartPre=-docker-compose -f /var/lib/docker/lab/apps/matrix/docker-compose.postgres.yml down
ExecStart=docker-compose -f /var/lib/docker/lab/apps/matrix/docker-compose.postgres.yml up
ExecStop=-docker-compose -f /var/lib/docker/lab/apps/matrix/docker-compose.postgres.yml stop

Restart=always
RestartSec=30
SyslogIdentifier=matrix-postgres

[Install]
WantedBy=multi-user.target
