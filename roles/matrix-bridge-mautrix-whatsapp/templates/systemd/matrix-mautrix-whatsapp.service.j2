#jinja2: lstrip_blocks: "True"
[Unit]
Description=Matrix Mautrix Whatsapp server
{% for service in matrix_mautrix_whatsapp_systemd_required_services_list %}
Requires={{ service }}
After={{ service }}
{% endfor %}
{% for service in matrix_mautrix_whatsapp_systemd_wanted_services_list %}
Wants={{ service }}
{% endfor %}

[Service]
Type=simple
ExecStartPre=/bin/sleep 5
ExecStartPre=-docker-compose -f /var/lib/docker/lab/apps/matrix/docker-compose.whatsapp.yml down
ExecStart=docker-compose -f /var/lib/docker/lab/apps/matrix/docker-compose.whatsapp.yml up
ExecStop=-docker-compose -f /var/lib/docker/lab/apps/matrix/docker-compose.whatsapp.yml stop

Restart=always
RestartSec=30
SyslogIdentifier=matrix-mautrix-whatsapp

[Install]
WantedBy=multi-user.target

